# Выберите официальный образ Node.js
FROM node:16-alpine

# Создайте рабочую директорию для приложения
WORKDIR /app

# Копируйте package.json и package-lock.json в рабочую директорию
COPY package*.json ./

# Установите зависимости приложения
RUN npm ci

# Копируйте исходный код приложения в рабочую директорию
COPY . .

# Укажите порт, на котором будет работать приложение
ENV PORT=3000
EXPOSE $PORT

# Запустите приложение
CMD ["npm", "start"]
